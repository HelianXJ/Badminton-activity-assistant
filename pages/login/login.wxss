.login-container {
  min-height: 100vh;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #ffffff;
}

.logo-section {
  margin-top: 100rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  border-radius: 24rpx;
}

.app-name {
  margin-top: 24rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.welcome-section {
  margin-top: 80rpx;
  text-align: center;
}

.welcome-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  margin-bottom: 16rpx;
}

.sub-text {
  font-size: 28rpx;
  color: #666666;
}

.button-section {
  margin-top: 80rpx;
  width: 100%;
}

.login-button {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-button.loading {
  opacity: 0.7;
}

.login-button::after {
  border: none;
}

.privacy-section {
  position: fixed;
  bottom: 80rpx;
  left: 0;
  right: 0;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
}

.privacy-text {
  margin-right: 8rpx;
}

.privacy-link {
  color: #07c160;
  display: inline;
}