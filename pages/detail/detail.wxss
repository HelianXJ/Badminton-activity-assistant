/* pages/detail/detail.wxss */
.container {
  min-height: 100vh;
  background-color: #f6f6f6;
  padding-bottom: 40rpx;
}

.activity-detail {
  padding: 24rpx;
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.activity-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.status-tag {
  margin-left: 16rpx;
}

.description-section,
.participants-section {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 24rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.description-content {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

.participants-list {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
  margin-top: 16rpx;
}

.participant-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 120rpx;
}

.participant-name {
  font-size: 24rpx;
  color: #666666;
  margin-top: 8rpx;
  text-align: center;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.creator-info {
  display: flex;
  align-items: center;
}

.creator-name {
  margin-left: 12rpx;
  font-size: 28rpx;
  color: #333333;
}

.action-section {
  margin-top: 48rpx;
  padding: 0 24rpx;
}

/* 自定义单元格样式 */
.t-cell {
  margin-bottom: 2rpx;
  background-color: #ffffff;
}

.t-cell__title {
  font-weight: bold;
}

.t-cell__description {
  color: #666666;
}